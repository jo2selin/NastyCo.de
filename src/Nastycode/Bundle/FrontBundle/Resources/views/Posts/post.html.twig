{% extends "::base.html.twig" %}
{% block body %}

	<section class="fullWidth grey sectionPosts">
		{% block menu %}
			{{ include("NastycodeFrontBundle::menu.html.twig") }}
		{% endblock %}
		<article>
            {% for post in posts %}
			<div class="row">
				<div class="info-author-code small-12 columns">
					<div class="picUser">
						<img src="{{ asset('uploads/pictures/nastypic_' ~ post.member ~ '.jpg') }}" alt="Profile Picture"/>
					</div>
					<div class="descrCode">
						<h2><a href="#">{{ post.title }}</a> <small>par {{ post.member }}</small></h2>
						<p>{{ post.description }}</p>
					</div>
				</div>
			</div>
			<div class="row scriptsNastycode">
				<div class="small-12 columns">
					<section>
						<header>
							<label>{{ post.lang|upper }}</label>
							<h5>{{ post.title }}</h5>
						</header>
						<code class="language-{{ post.lang }} fullSize">{{ post.codeNasty|raw }}</code>
					</section>
				</div>
			</div>
			<div class="row scriptsNastycode">
				<div class="small-12 columns">
					<section>
						<header>
							<label>{{ post.lang|upper }}</label>
							<h5>{{ post.member }} propose cette correction</h5>
						</header>
						<code class="language-{{ post.lang }} fullSize">{{ post.codeClean|raw }}</code>
					</section>
				</div>
			</div>

			<div class="row comments">
				<div class="small-12 columns">
					<h4>Ecrire un commentaire:</h4>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <form class="commentForm" action="#">
                            <ul>
                                <li class="commentFormArea">{{ form_widget(comment.commentaires) }}</li>
                                <li class="commentFormsubmit">{{ form_widget(comment.envoyer) }}</li>
                            </ul>
                        </form>
                    {% else %}
                        <p class="text-center">Pour poster un commentaire, <a href="{{ path('fos_user_security_login') }}">veuillez vous connecter</a>.</p>
                        <p class="text-center">Vous n'avez pas de compte ? <a href="{{ path('fos_user_registration_register') }}">Inscrivez-vous !</a></p>
                    {% endif %}
				</div>
			</div>
			<div class="row comments">
				<div class="small-12 columns">
					<h4>936 Commentaires</h4>
					<div class="comment">
						<div class="userpicComment">
							<img src="http://lorempixel.com/50/50/cats/" alt="profile picture"/>
						</div>
						<div class="userComment">
							<header>Francky</header>
							<p>trop cool</p>
						</div>
					</div>
					<div class="comment">
						<div class="userpicComment">
							<img src="http://lorempixel.com/50/50/cats/" alt="profile picture"/>
						</div>
						<div class="userComment">
							<header>Vincent</header>
							<p>Trop des barres, Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos quasi fugiat culpa cumque consequuntur, dolor fugit neque, ipsam.</p>
						</div>
					</div>
				</div>
			</div>
            {% endfor %}
		</article>
	</section>

{% endblock %}

